          var n = +section_14Value;
          var o = +section_15Value;
          var p = +section_16Value;
          var q = +section_17Value;
          var r = +section_18Value;
          var s = +section_19Value;
          var t = +section_20Value;
          
          sum = a + b + c + d + e + f + g + h + i + j + k + l + m + n + o + p + q + r + s + t;
