         section_19Value = section_19.value;
         section_20Value = section_20.value;
         
          var sum = 0;
          var a = +section_1Value;
          var b = +section_2Value;
          var c = +section_3Value;
          var d = +section_4Value;
          var e = +section_5Value;
          var f = +section_6Value;
          var g = +section_7Value;
          var h = +section_8Value;
          var i = +section_9Value;
          var j = +section_10Value;
          var k = +section_11Value;
          var l = +section_12Value;
